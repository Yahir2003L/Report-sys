---
import Layout from '../layouts/Layout.astro';
import { getUserFromToken } from '../lib/auth';
import CreateReportModal from '@/components/CreateReportModal.astro';
import Delete from '@/components/icons/Delete.astro';

interface Report {
  id: number;
  classroom: string;
  problem_type: 'red' | 'telefonico' | 'proyector' | 'pantalla' | 'electrico' | 'general';
  priority: 'alta' | 'media' | 'baja';
  description: string;
  status: 'pendiente' | 'en_proceso' | 'resuelto'; 
  sector: 'primaria' | 'secundaria' | 'bachillerato' | 'universidad';
  created_at: string;
  created_by: number;
  created_by_name: string;
}

interface Stats {
  total: number;
  bySector: {
    primaria: number;
    secundaria: number;
    bachillerato: number;
    universidad: number;
  };
  byStatus: {
    pendiente: number;
    en_proceso: number;
    resuelto: number;
  };
}

const token = Astro.cookies.get('session_token')?.value;
const user = token ? await getUserFromToken(token) : null;

const url = new URL(Astro.request.url);
const selectedSector = url.searchParams.get('sector') || user?.sector || 'secundaria';

if (!user) {
  return Astro.redirect('/login');
}

let reports: Report[] = [];
let stats: Stats = {
  total: 0,
  bySector: {
    primaria: 0,
    secundaria: 0,
    bachillerato: 0,
    universidad: 0
  },
  byStatus: {
    pendiente: 0,
    en_proceso: 0,
    resuelto: 0
  }
};

try {
  let apiUrl = Astro.url.origin + '/api/reports';
  if (user.role !== 'user') {
    apiUrl += `?sector=${selectedSector}`;
  }

  const response = await fetch(apiUrl, {
    headers: {
      'Cookie': `session_token=${token}`
    }
  });
  
  if (response.ok) {
    reports = await response.json();
    reports.forEach((report: Report) => {
      if (user.role === 'user' || report.sector === selectedSector) {
        stats.bySector[report.sector as keyof typeof stats.bySector]++;
        stats.byStatus[report.status as keyof typeof stats.byStatus]++;
        stats.total++;
      }
    });
  }
} catch (err) {
  console.error('Error al obtener reportes:', err);
}

if (user.role !== 'user') {
  reports = reports.filter(report => report.sector === selectedSector);
}

const usersWithReports = [...new Set(reports.map(r => r.created_by))];

reports.sort((a, b) => {
  if (a.status === 'resuelto' && b.status !== 'resuelto') return 1;
  if (a.status !== 'resuelto' && b.status === 'resuelto') return -1;
  if (a.status === 'resuelto' && b.status === 'resuelto') {
    return new Date(b.created_at).getTime() - new Date(a.created_at).getTime();
  }
  const priorityOrder = { alta: 3, media: 2, baja: 1 };
  if (priorityOrder[b.priority] !== priorityOrder[a.priority]) {
    return priorityOrder[b.priority] - priorityOrder[a.priority];
  }
  return new Date(b.created_at).getTime() - new Date(a.created_at).getTime();
});
---

<Layout user={user} currentSector={selectedSector}>
  <!-- seccion de las estadisticas -->
<body data-user-role={user.role} data-user-sector={user.sector}>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 px-10 mb-8">
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Total de Reportes</h3>
      <p class="text-3xl font-bold">{stats.total}</p>
    </div>
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Pendientes</h3>
      <p class="text-3xl font-bold text-yellow-600">{stats.byStatus.pendiente}</p>
    </div>
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Resueltos</h3>
      <p class="text-3xl font-bold text-green-600">{stats.byStatus.resuelto}</p>
    </div>
  </div>

  <!-- seccion con los datos de los reportes -->
  <div class="grid grid-cols-1 lg:grid-cols-[1fr_2fr] gap-6 mr-10 ml-10 rounded-xl bg-[#313031]">
    <!-- columna izquierda -->
    <div class="bg-[#313031] rounded-xl flex flex-col h-[50vh]">
      <div class="p-4">
        <h3 class="font-semibold text-[#95979a]">Todos los Reportes</h3>
      </div>
      <div class="overflow-y-auto flex-1">
        {reports.length > 0 ? (
          <div class="divide-y px-3">
            {reports.map((report) => (
              <div 
                class="p-3 rounded-full mb-1 border-0 bg-[#393839] cursor-pointer transition-colors report-item ${report.status === 'resuelto' ? 'opacity-70' : ''}"
                data-report-id={report.id}
                data-problem-type={report.problem_type}
                data-description={report.description || 'No hay descripción'}
                data-sector={report.sector}
                data-status={report.status}
                data-priority={report.priority}
                data-created-at={new Date(report.created_at).toLocaleString()}
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-medium text-[#9f9e9e]">{report.created_by_name}</div>
                      <div class="text-sm text-gray-300">Aula: {report.classroom}</div>
                    </div>
                  </div>
                  <div class="flex gap-x-3">
                    <div class="flex flex-col  items-center">
                      <span class="text-xs text-[#7d7d7d]">{new Date(report.created_at).toLocaleDateString()}</span>
                      <span class={`mt-1 px-2 py-0.5 text-xs rounded-full ${
                        report.status === 'pendiente' ? 'bg-yellow-100 text-yellow-800' :
                        report.status === 'en_proceso' ? 'bg-blue-100 text-blue-800' :
                        'bg-green-100 text-green-800'
                      }`}>
                        {report.status === 'pendiente' ? 'Pendiente' :
                        report.status === 'en_proceso' ? 'En Proceso' : 'Resuelto'}
                      </span>
                    </div>
                    <button 
                      class="mt-1 text-xs p-1 rounded-full delete-report cursor-pointer transition-colors" 
                      data-report-id={report.id}
                      onclick="deleteReport(event, this)"
                    >
                      <Delete class="w-5 h-5 text-red-500 hover:text-red-400" />
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="p-8 text-center text-gray-500 h-full flex items-center justify-center">
            No hay reportes registrados
          </div>
        )}
      </div>
    </div>

    <!-- columna derecha -->
    <div class="bg-[#313031] rounded-xl flex flex-col">
      <div class="p-6 flex-1" id="report-preview-container">
        {reports.length > 0 ? (
          <div class="text-center flex flex-col justify-center h-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="mt-2 text-gray-500">Selecciona un reporte para ver la vista previa</p>
          </div>
        ) : (
          <div class="text-center py-10 h-full flex flex-col items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="mt-2 text-gray-500">No hay reportes disponibles</p>
          </div>
        )}
      </div>
    </div>
  </div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script is:inline>

  const currentUserRole = document.body.getAttribute('data-user-role');
 
  // Función para eliminar reportes
  async function deleteReport(event, button) {
    event.stopPropagation();
    const reportId = button.getAttribute('data-report-id');

    const {isConfirmed} = await Swal.fire({
      title: '¿Estás seguro?',
      text: "No podrás revertir esto!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Sí, eliminar',
      cancelButtonText: 'Cancelar',
      background: '#313031',
      color: '#ffffff'
    });

    if (!isConfirmed) return;

    try {
      const response = await fetch(`/api/reports`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'Cookie': `session_token=${document.cookie.split('session_token=')[1]?.split(';')[0]}` // Obtener el token de la cookie
        },
        body: JSON.stringify({ reportId })
      });

      if (response.ok) {
        await Swal.fire({
          title: 'Eliminado!',
          text: 'El reporte ha sido eliminado.',
          icon: 'success',
          confirmButtonColor: '#3085d6',
          background: '#313031',
          color: '#ffffff'
        });
        window.location.reload();
      } else{
        const data = await response.json();
        await Swal.fire({
          title: 'Error!',
          text: data.message || 'No se pudo eliminar el reporte.',
          icon: 'error',
          confirmButtonColor: '#3085d6',
          background: '#313031',
          color: '#ffffff'
        });
      }
    } catch (error) {
      console.error('Error al eliminar el reporte:', error);
      await Swal.fire({
        title: 'Error!',
        text: 'Ocurrió un error al eliminar el reporte.',
        icon: 'error',
        confirmButtonColor: '#3085d6',
        background: '#313031',
        color: '#ffffff'
      });
    }
  }

  // funcion para cambiar el status del reporte
  async function resolveReport(event, button) {
    event.stopPropagation();
    
    const reportId = button.getAttribute('data-report-id');
    
    try {
      const { isConfirmed } = await Swal.fire({
        title: '¿Marcar como resuelto?',
        text: "¿Estás seguro de que quieres marcar este reporte como resuelto?",
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Sí, marcar como resuelto',
        cancelButtonText: 'Cancelar',
        background: '#313031',
        color: '#ffffff'
      });

      if (!isConfirmed) return;

      const response = await fetch('/api/reports', {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
          'Cookie': `session_token=${document.cookie.split('session_token=')[1]?.split(';')[0]}`
        },
        body: JSON.stringify({ 
          reportId,
          newStatus: 'resuelto'
        })
      });

      if (response.ok) {
        await Swal.fire({
          title: '¡Resuelto!',
          text: 'El reporte ha sido marcado como resuelto.',
          icon: 'success',
          confirmButtonColor: '#3085d6',
          background: '#313031',
          color: '#ffffff'
        });
        window.location.reload();
      } else {
        const data = await response.json();
        await Swal.fire({
          title: 'Error!',
          text: data.message || 'No se pudo actualizar el estado del reporte.',
          icon: 'error',
          confirmButtonColor: '#3085d6',
          background: '#313031',
          color: '#ffffff'
        });
      }
    } catch (error) {
      console.error('Error:', error);
      await Swal.fire({
        title: 'Error!',
        text: 'Ocurrió un error al marcar el reporte como resuelto.',
        icon: 'error',
        confirmButtonColor: '#3085d6',
        background: '#313031',
        color: '#ffffff'
      });
    }
  }

// evento click para cada reporte
  document.querySelectorAll('.report-item').forEach(item => {
    item.addEventListener('click', () => {
      const reportData = {
        id: item.getAttribute('data-report-id'),
        created_by_name: item.querySelector('.font-medium').textContent,
        classroom: item.querySelector('.text-sm.text-gray-300').textContent.replace('Aula: ', ''),
        created_at: item.getAttribute('data-created-at'),
        status: item.getAttribute('data-status'),
        problem_type: item.getAttribute('data-problem-type'),
        priority: item.getAttribute('data-priority') || 'media',
        description: item.getAttribute('data-description'),
        sector: item.getAttribute('data-sector'),
        user_role: currentUserRole
      };
      

      const problemTypeNames = {
        'red': 'Red',
        'telefonico': 'Telefónico',
        'proyector': 'Proyector',
        'pantalla': 'Pantalla',
        'electrico': 'Eléctrico',
        'general': 'General'
      };
      
      const statusColor = {
        'pendiente': 'bg-yellow-100 text-yellow-800',
        'en_proceso': 'bg-blue-100 text-blue-800',
        'resuelto': 'bg-green-100 text-green-800'
      };
      
      const statusNames = {
        'pendiente': 'Pendiente',
        'en_proceso': 'En Proceso',
        'resuelto': 'Resuelto'
      };
      
      const container = document.getElementById('report-preview-container');
      
      container.innerHTML = `
  <div>
    <div class="mb-6">
      <h4 class="font-medium text-lg text-[#95979a]">${reportData.created_by_name}</h4>
      <p class="text-sm text-[#7d7d7d]">${reportData.created_at}</p>
    </div>
    
    <div class="grid grid-cols-2 gap-4 mb-6">
      <div>
        <span class="text-sm font-medium text-gray-300">Aula:</span>
        <p class="mt-1 font-medium text-[#7d7d7d]">${reportData.classroom}</p>
      </div>
      <div>
        <span class="text-sm font-medium text-gray-300">Sector:</span>
        <p class="mt-1 capitalize text-[#7d7d7d]">${reportData.sector}</p>
      </div>
      <div>
        <span class="text-sm font-medium text-gray-300">Tipo:</span>
        <p class="mt-1 capitalize text-[#7d7d7d]">${problemTypeNames[reportData.problem_type] || reportData.problem_type}</p>
      </div>

      <div>
        <span class="text-sm font-medium text-gray-300">Prioridad:</span>
        <div class="mt-1 flex items-center">
          <span class="px-3 py-1 text-xs rounded-full ${
            reportData.priority === 'alta' ? 'bg-red-600 text-white font-semibold' :
            reportData.priority === 'media' ? 'bg-yellow-400 text-white font-semibold' :
            'bg-gray-400 text-white font-semibold'
          }">
            ${(reportData.priority || 'media').toUpperCase()}
          </span>
        </div>
      </div>

      <div>
        <span class="text-sm font-medium text-gray-300">Estado:</span>
        <p class="mt-1">
          <span class="px-3 py-1 text-xs rounded-full ${statusColor[reportData.status] || 'bg-gray-100 text-gray-800'}">
            ${statusNames[reportData.status] || reportData.status}
          </span>
        </p>
      </div>
    </div>
    
    <div class="mb-6">
      <span class="text-sm font-medium text-gray-300">Descripción:</span>
      <p class="mt-2 p-4 bg-gray-50 rounded-lg text-[#7d7d7d] font-semibold">${reportData.description}</p>
    
      ${(currentUserRole === 'admin' || currentUserRole === 'superadmin') && reportData.status !== 'resuelto' ? `
        <div class="mt-6 flex justify-end">
          <button 
            class="bg-green-600 text-white px-8 py-3 rounded-md hover:bg-green-700 transition-colors resolve-report"
            data-report-id="${reportData.id}"
            onclick="resolveReport(event, this)"
          >
            Marcar como resuelto
          </button>
        </div>
      ` : ''}
    </div>
  </div>
`;
    });
  });
</script>
</body>
</Layout>